    <main id="main" class="main">
        <section class="section profile">
            <div class="row">
                <!-- pricing -->
                <<section class="pricing" id="container">
                    <div class="new-price">
                        <!-- <img src="~/img/document.svg"> -->
                        <button type="button" onclick="togglePayment()">Add Price plan</button>
                    </div>
                    <div class="container" data-aos="fade-up">

                        <header class="section-header">

                            <p>Current Pricing plans</p>
                        </header><br>

                        <div class="row gy-4" data-aos="fade-left">



                          
                                <div class="row gy-4 justify-content-center" data-aos="fade-left" id="pricing2" >
                                @if (Model.AllPlans != null && Model.AllPlans.Any())
                                {
                                    foreach (var pric in Model.AllPlans)
                                    {
                                        <div class="col-lg-3 col-md-6 col-sm-12" data-aos="zoom-in" data-aos-delay="200">
                                            <div class="card border-0 shadow-sm h-100 text-center rounded-3 pricing-card">
                                                <div class="card-body p-4">
                                                    <span class="badge bg-success mb-3">Featured</span>
                                                    <h4 class="card-title fw-bold" style="color: #65c600;">@pric.subscriptionname</h4>
                                                    <h5 class="card-price my-3"><sup>$</sup>@pric.subscriptionprice<span class="text-muted fs-6"> / mo</span></h5>
                                                    <img src="~/img/pricing-starter.png" class="img-fluid my-3 rounded" alt="Plan Image" style="max-height:120px; object-fit:contain;">
                                                    <ul class="list-unstyled mb-4">
                                                        <li>@pric.DescriptionPricin</li>
                                                        <li class="text-muted">Massa ultricies mi</li>
                                                    </ul>
                                                    <div class="d-flex justify-content-center gap-2">
                                                        <a href="javascript:void(0)" onclick="openEditModal('@pric.PriceId', '@pric.subscriptionname', '@pric.subscriptionprice', '@pric.Subscriptiontype', '@pric.DescriptionPricin')"
                                                           class="btn btn-sm btn-warning">Edit</a>
                                                        
                                                        <form method="post" asp-action="DeletePricePlan" asp-route-id="@pric.PriceId" onsubmit="return confirm('Are you sure?');">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                   
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    }
                                }
                                else
                                {
                                    <div class="col-12 text-center">
                                        <p class="text-muted">No price plans available at the moment</p>
                                    </div>
                                }
                                </div>

                            </div>

                        </div>

                </section><br>  
         
                <!-- payment -->

                <div class="container p-0 " id="payment" style="display:none">

                    <div class="card px-4">
                        <p class="h8 py-3">Add New Pricing plans</p>
                        <form method="POST" asp-action="adminpriceplan" asp-controller="admin">
                            @if (ViewBag.ModelErrors != null)
                            {
                                <div class="alert alert-danger">
                                    <ul>
                                        @foreach (var err in ViewBag.ModelErrors)
                                        {
                                            <li>
                                                <strong>@err.Field</strong>:
                                                @string.Join(", ", err.Errors)
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                            <div class="row gx-3">
                                <div class="col-6">
                                    <div class="d-flex flex-column">
                                        <p class="text mb-1">Subscription Name</p>
                                        
                                        <input asp-for="NewPlan.subscriptionname" class="form-control mb-3" type="text"  required>
                                        <span asp-validation-for="NewPlan.subscriptionname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex flex-column">
                                        <p class="text mb-1">Subscription price $</p>
                                        <input asp-for="NewPlan.subscriptionprice" class="form-control mb-3" type="number" required>
                                        <span asp-validation-for="NewPlan.subscriptionprice" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex flex-column">
                                        <p class="text mb-1">Subscription type</p>
                                        <label asp-for="NewPlan.Subscriptiontype" class="form-label"></label>
                                        <select asp-for="NewPlan.Subscriptiontype" class="form-control mb-3 pt-2" required>
                                            <option value="" disabled selected>Choose Your Subscription</option>
                                            <option value="monthly">Monthly</option>
                                            <option value="yearly">Yearly</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex flex-column">
                                    <p class="text mb-1">Description Pricing</p>
                                    <textarea asp-for="NewPlan.DescriptionPricin" rows="4" class="form-control mb-3" required></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex flex-column align-items-center">
                                    <button type="submit" class="btn btn-primary mb-3">Add Now</button>
                                </div>

                            </div>
                        </form>

                    </div>
                </div>




            </div>
