                                        <div class="card-count">
                                            <div class="time">
                                                <p class="text-muted">Last updated 3 mins ago</p>
                                            </div>
                                            <div class="time" id="categoryName">
                                                <p class="text-muted" id="card-title">Male</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="col" id="col">
                                <div class="card h-100">
                                    <div class="pt">
                                        <div class="logo">
                                            <a href=""><img src="~/img/services.png" class="card-img-top" alt="..."></a>
                                            <p class="card-title" id="card-title"><a href="">awad</a></p>
