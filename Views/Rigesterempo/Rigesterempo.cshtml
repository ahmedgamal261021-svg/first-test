                                    <li>
                                        <strong>@error.Field:</strong>
                                        @foreach (var msg in error.Errors)
                                        {
                                            <span>@msg</span>
                                    
                                            <br />
                                        }
                                    </li>
                                }
                            </ul>
                        </div>
                        } 
                @section Scripts {
                    @{
                        await Html.RenderPartialAsync("_ValidationScriptsPartial");
                    }
                }
            </div>
