	<section class="wizard-section-create mt-5 pt-5">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-12 col-md-10 col-lg-8">
					<!-- هنا بنحدد العرض في الشاشات -->
					<div class="form-wizard p-4 shadow rounded bg-white w-100">
				<form asp-action="Rigesteruser"
					  asp-controller="Rigesteruser"
					  method="post"
					  enctype="multipart/form-data">
					<!-- مهم للرفع -->
					@Html.AntiForgeryToken()
					<div class="form-wizard-header">
						<br>
						<p>Fill all form field to go next step User</p>
						<ul class="list-unstyled form-wizard-steps clearfix">
							<li class="active"><span>1  </span><br><a>Personal Information</a></li>
							<li><span>2</span><br><a>Basic Data</a></li>

						</ul>
					</div>
					<fieldset class="wizard-fieldset show">
						<h5>Personal Data</h5>
						<div asp-validation-summary="All"></div>
						<div class="form-group">
							<input type="text" class="form-control wizard-required"
								   id="Name" name="Name">
							<label for="Name" class="wizard-form-text-label">
								Full Name <span class="star">*</span>
							</label>
							<span asp-validation-for="Name" class="text-danger"></span>

						</div>
						<div class="form-group">
							<input type="tel" class="form-control wizard-required"
								   id="PhoneNum" name="PhoneNum">
							<label for="PhoneNum" class="wizard-form-text-label">
								Phone Number <span class="star">*</span>
							</label>
						</div>
						<div class="form-group">
							<input type="password" class="form-control wizard-required"
								   id="Password" name="Password"
								   oninput="checkPasswordStrength(event)">

							<label for="password" class="wizard-form-text-label">Password <span class="star">*</span></label>
							<span class="toggle-password" onclick="togglePassword()">🙈</span>
							<div class="password-strength">
								<div class="bar weak"></div>
								<div class="bar medium"></div>
								<div class="bar strong"></div>
							</div>
						</div>
						<div class="password-message">
							<div class="wizard-form-error"></div>
						</div>
						<div class="form-group">
							<input type="number" class="form-control wizard-required"
								   id="Age" name="Age" oninput="checkAge(event)">
							<label for="Age" class="wizard-form-text-label">
								Age <span class="star">*</span>
							</label>
						</div>
						<div class="form-group">
							Gender <span class="star">*</span>
							<div class="wizard-form-radio">
								<input type="radio" id="genderMale" name="Gender" value="Male">
								<label for="genderMale">Male</label>
							</div>
							<div class="wizard-form-radio">
								<input type="radio" id="genderFemale" name="Gender" value="Female">
								<label for="genderFemale">Female</label>
							</div>
						</div>
						<input name="check-name" id="check-box" type="checkbox">
						<label for="check-box" class="Remember">Remember me</label>
						<span class="star " style="margin-left: 200px;">* is mean required</span>
						<div class="form-group clearfix">
							<a href="javascript:;" class="form-wizard-next-btn float-right">Next</a>
						</div>
						<a class="Already" style="color:#000000 ;font-weight: 400px;">Already have an account?</a>
						<a href="signUser.html">Sign in Now</a>
					</fieldset>
					<fieldset class="wizard-fieldset">
						<h5>Basic data</h5>
						<div class="form-group">
							<input type="text" class="form-control wizard-required"
								   id="JobName" name="JobName">
							<label for="JobName" class="wizard-form-text-label">
								Job Title <span class="star">*</span>
							</label>
						</div>
						<div class="form-group">
							<label for="Country">Country <span class="star">*</span></label>
							<select id="Country" name="Country"
									class="form-control wizard-required">
								onchange="updateCityList()" class="form-control wizard-required">
								<optgroup label="choose Your countries"></optgroup>
								<option value="EG">Egypt</option>
								<option value="DZ">Algeria</option>
								<option value="KW">Kuwait</option>
								<option value="LB">Lebanon</option>
								<option value="LY">Libya</option>
								<option value="MA">Morocco</option>
								<option value="MR">Mauritania</option>
								<option value="OM">Oman</option>
								<option value="QA">Qatar</option>
								<option value="SD">Sudan</option>
								<option value="SY">Syria</option>
								<option value="TN">Tunisia</option>
							</select>
							<div class="wizard-form-error"></div>

						</div>
						<div class="form-group">
							<label for="Government">Governorate <span class="star">*</span></label>
							<select id="Government" name="Government"
									class="form-control wizard-required">
								<optgroup label="choose Your governante"></optgroup>
								<option value="Cairo">Cairo</option>
								<option value="Giza">Giza</option>
							</select>
							<div class="wizard-form-error"></div>
							<span class="wizard-password-eye"><i class="far fa-eye"></i></span>
						</div>
						<div class="form-group">
							<label for="EducationLevel">Educational level <span class="star">*</span></label>
							<select id="EducationLevel" name="EducationLevel"
									class="form-control wizard-required">
								<optgroup label="choose Your Educational level"></optgroup>
								<option value="College">College</option>
								<option value="institute">institute</option>
								<option value="bachelor's degree">bachelor's degree </option>
								<option value="diploma">diploma</option>
								<option value="uneducated">uneducated</option>
								<option value="qualified">qualified</option>
							</select>
							<div class="wizard-form-error"></div>
							<span class="wizard-password-eye"><i class="far fa-eye"></i></span>
						</div>
						<div class="form-group">
							<label for="ProfilePhoto" class="wizard-form-text-label">Upload Profile Photo</label>
							<input type="file" class="form-control" id="ProfilePhoto" name="ProfilePhoto" accept="image/*" />
							<span asp-validation-for="ProfilePhoto" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label for="ExperienceLevel">Experience level <span class="star">*</span></label>
							<select id="ExperienceLevel" name="ExperienceLevel"
									class="form-control wizard-required">
								<optgroup label="choose Your Experience level"></optgroup>
								<option value="No experience">No experience</option>
								<option value="Fresh graduate">Fresh graduate</option>
								<option value="1-3 Years">1-3 Years</option>
								<option value="3-5 Years">3-5 Years</option>
								<option value="5-8 Years">5-8 Years</option>
								<option value="More Than Years"> More Than Years </option>
							</select>
							<div class="wizard-form-error"></div>
							<span class="wizard-password-eye"><i class="far fa-eye"></i></span>
						</div>
						<div class="form-group clearfix">
							<button type="button"
									class="form-wizard-previous-btn float-left">
								Previous
							</button>
							<button type="submit"
									class="form-wizard-next-btn float-right">
								Finish
							</button>
							@* <a href="javascript:;" class="form-wizard-previous-btn float-left">Previous</a> *@
							@* <a asp-action="Rigesteruser" asp-controller="Rigesteruser" class="form-wizard-next-btn float-right">Next</a>
 *@						</div>
					</fieldset>


				</form>
					</div>
