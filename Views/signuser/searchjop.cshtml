                                                <a href=""><img src="~/img/services.png" class="card-img-top" alt="..."></a>
                                                <p class="card-title" id="card-title">
                                                    <a href="@Url.Action("Applyjop", "signuser", new { jobId = jobs.job_id })">
                                                        @jobs.job_name
                                                    </a> 
                                                </p>
                                            </div>

                                            <a href="#"><i class="bi bi-bookmark" id="bookmarkIcon"></i></a>


                                        </div>
                                        <div class="card-body">
                                            <p class="card-text" id="card-title">@jobs.job_details </p>
                                        </div>
                                        <hr>
