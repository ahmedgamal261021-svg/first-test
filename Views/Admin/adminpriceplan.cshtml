    <div class="modal fade" id="editPriceModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Price Plan</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="editPriceForm" method="post" asp-action="EditPricePlan">
                    <div class="modal-body">
                        <input type="hidden" name="PriceId" id="editPriceId" />
                        <div class="mb-3">
                            <label>Subscription Name</label>
                            <input type="text" name="subscriptionname" id="editName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label>Subscription Price ($)</label>
                            <input type="number" name="subscriptionprice" id="editPrice" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label>Subscription Type</label>
                            <select name="Subscriptiontype" id="editType" class="form-control" required>
                                <option value="monthly">Monthly</option>
                                <option value="yearly">Yearly</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label>Description</label>
                            <textarea name="DescriptionPricin" id="editDesc" class="form-control" rows="3" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

