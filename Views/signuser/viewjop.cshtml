    <script>
        const userId = @userId;

        function handleJobClick(job) {
            fetch('/signuser/StoreJobData', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(job)
            })
            .then(response => {
                if (response.ok) {
                    // ✅ لما البيانات تتخزن بنجاح، روح على صفحة التقديم
                    window.location.href = `/signuser/Applyjop?id=${userId}`;
                } else {
                    alert("Failed to store job data.");
                }
            })
            .catch(error => {
                console.error("Error:", error);
            });

            // ✅ ده علشان يمنع الرابط من الفتح قبل ما البوست يتم
            return false;
        }
