    <script>
        function filterEmployees() {
          const country = document.getElementById('countrySelect').value;
          const governorate = document.getElementById('Governorate').value;
          const field = document.getElementById('fildOfWork').value;
          const age = document.getElementById('Age').value;
          const gender = document.getElementById('gender').value;
          const experience = document.getElementById('Experience').value;

          const employees = document.querySelectorAll('.pad');

          employees.forEach(employee => {
            const employeeCountry = employee.querySelector('p:nth-of-type(1)').innerText.split(',')[0].trim();
            const employeeGovernorate = employee.querySelector('p:nth-of-type(1)').innerText.split(',')[1].trim();
            const employeeField = employee.querySelector('h1').innerText.trim();
            const employeeGender = employee.querySelector('p:nth-of-type(2)').innerText.trim().toLowerCase();
            const employeeExperience = employee.dataset.experience;
            const employeeAgeRange = employee.dataset.age;

            const matchesCountry = country === 'choose the country' || employeeCountry === country;
            const matchesGovernorate = governorate === 'choose the Governorate' || employeeGovernorate === governorate;
            const matchesField = field === 'All' || employeeField.toLowerCase().includes(field);
            const matchesAge = age === 'All' || employeeAgeRange === age;
            const matchesGender = gender === 'All' || employeeGender === gender;
            const matchesExperience = experience === 'All' || employeeExperience === experience;

            if (matchesCountry && matchesGovernorate && matchesField && matchesAge && matchesGender && matchesExperience) {
              employee.style.display = 'block';
            } else {
              employee.style.display = 'none';
            }
          });
        }
    </script>
