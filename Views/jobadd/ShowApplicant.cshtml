    <script>
            // لجمع البيانات وتخزينها في localStorage ثم التوجيه إلى صفحة أخرى
        function storeAndRedirect() {
            const jobName = document.getElementById('Job-name').value;
            const jobField = document.getElementById('Job-field').value;
            const country = document.getElementById('countrySelect').value;
            const governorate = document.getElementById('Governorate').value;
            const jobType = document.getElementById('times').value;
            const numberOfEmployees = document.getElementById('Number').value;
            const jobDetails = document.getElementById('details').value;
            const educationalLevel = document.getElementById('Educational').value;
            const experienceLevel = document.getElementById('Experience').value;
            const gender = document.querySelector('input[name="radio-name"]:checked').nextElementSibling.textContent;
            const minimumSalary = document.getElementById('Minimum').value;
            const maximumSalary = document.getElementById('Maximum').value;

            const jobData = {
                jobName,
                jobField,
                country,
                governorate,
                jobType,
                numberOfEmployees,
                jobDetails,
                educationalLevel,
                experienceLevel,
                gender,
                minimumSalary,
                maximumSalary
            };

            localStorage.setItem('jobData', JSON.stringify(jobData));

            window.location.href = 'searchJob-aftersign.html';  // استبدل 'page.html' بعنوان الصفحة التي تريد توجيه المستخدم إليها
        }

        // لاسترجاع البيانات وعرضها في الصفحة الأخرى
        function displayJobData() {
            const jobData = JSON.parse(localStorage.getItem('jobData'));
            if (jobData) {
                const jobList = document.getElementById('job-list');
                const newRow = document.createElement('div');
                newRow.innerHTML = `
                <div class="col"id="col">
                        <div class="card h-100">
                          <div class="pt">
                            <div class="logo">
                              <a href=""><img src="~/img/services.png" class="card-img-top" alt="..."></a>
                              <p class="card-title"id="card-title"><a href="">${jobData.jobName}</a></p>
                            </div>

                            <a href="#"><i class="bi bi-bookmark" id="bookmarkIcon"></i></a>

                          </div>
                          <div class="card-body">

                            <p class="card-text"id="card-title">${jobData.jobDetails}</p>
                          </div>
                          <hr>
                          <div class="card-count">
                            <div class="time">
                              <p class="text-muted">Last updated 3 mins ago</p>
                            </div>
                            <div class="time"id="categoryName">
                              <p class="text-muted"id="card-title">${jobData.jobField}</p>
                            </div>
                          </div>
                        </div>
                      </div>
                `;
                jobList.appendChild(newRow);

                // إزالة البيانات من localStorage بعد استرجاعها
                localStorage.removeItem('jobData');
            }
        }

        // استدعاء displayJobData عند تحميل الصفحة الأخرى
        document.addEventListener('DOMContentLoaded', displayJobData);

    </script>

