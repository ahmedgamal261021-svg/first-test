            <div class="form-wizard ">
                <form asp-action="Rigesterempo" asp-controller="Rigesterempo" method="post" role="form" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="form-wizard-header">
                        <br>
                        <p>Fill all form field to go next step Employer</p>

                        <ul class="list-unstyled form-wizard-steps clearfix">
                            <li class="active"><span>1  </span><br><a>company representative</a></li>
                            <li><span>2</span><br><a>Basic data of the company</a></li>

                        </ul>
                    </div>
                    <fieldset class="wizard-fieldset show">
                        <h5>company representative</h5>
                        <div class="form-group">
                            <input asp-for="emp_fname" class="form-control wizard-required" />
                            <label asp-for="emp_fname" class="wizard-form-text-label">First Name <span class="star">*</span></label>
                            <span asp-validation-for="emp_fname" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="emp_lname" type="text" class="form-control wizard-required" />
                            <label asp-for="emp_lname" class="wizard-form-text-label">Last Name <span class="star">*</span></label>
                            <span asp-validation-for="emp_lname" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="emp_phone" type="text" class="form-control wizard-required" />
                            <label asp-for="emp_phone" class="wizard-form-text-label">Phone <span class="star">*</span></label>
                            <span asp-validation-for="emp_phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="emp_email" type="text" class="form-control wizard-required" />
                            <label asp-for="emp_email" class="wizard-form-text-label">Email <span class="star">*</span></label>
                            <span asp-validation-for="emp_email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control wizard-required" type="password" />
                            <label asp-for="Password" class="wizard-form-text-label">Password <span class="star">*</span></label>
                            <span asp-validation-for="Password"  class="toggle-password" onclick="togglePassword()">🙈</span>
                            <div class="password-strength">
                                <div class="bar weak"></div>
                                <div class="bar medium"></div>
                                <div class="bar strong"></div>
                            </div>
                        </div>

                        <div class="password-message">
                            <div class="wizard-form-error"></div>
                        </div>
                        <div class="form-group">
                            <input asp-for="companyName" type="text" class="form-control wizard-required" />
                            <label asp-for="companyName" class="wizard-form-text-label">companyName<span class="star">*</span></label>
                            <span asp-validation-for="companyName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="ProfilePhoto" class="wizard-form-text-label">Upload Profile Photo</label>
                            <input type="file" class="form-control" id="ProfilePhoto" name="ProfilePhoto" accept="image/*" />
                            <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
                        </div>  

                        <div class="form-group">
                            <input name="check-name" id="check-box" type="checkbox">
                            <label for="check-box" class="Remember">Remember me</label>
                        </div>
                        <span class="star">* Required</span>

                        <div class="form-group clearfix">
                            <a href="javascript:;" class="form-wizard-next-btn float-right">Next</a>
                        </div>
                        <a class="Already" style="color:#000000 ;font-weight: 400px;">Already have an account?</a>
                        <a href="signEmlpoyer.html">Sign in Now</a>
                    </fieldset>
                    <fieldset class="wizard-fieldset">
                        <h5>Basic data of the company</h5>
                        <div class="form-group">
                            <input asp-for="job_title"  type="text"  class="form-control wizard-required" />
                            <label asp-for="job_title" class="wizard-form-text-label">job_title<span class="star">*</span></label>
                            <span asp-validation-for="job_title" class="text-danger"></span>
                            <div class="wizard-form-error"></div>
                        </div>
                        <div class="form-group">
                            <label asp-for="country">Country <span class="star">*</span></label>

                            <select asp-for="country" onchange="updateCityList()" class="form-control wizard-required">
                                <optgroup label="choose Your countries"></optgroup>
                                <option value="EG">Egypt</option>
                                <option value="DZ">Algeria</option>
                                <option value="KW">Kuwait</option>
                                <option value="LB">Lebanon</option>
                                <option value="LY">Libya</option>
                                <option value="MA">Morocco</option>
                                <option value="MR">Mauritania</option>
                                <option value="OM">Oman</option>
                                <option value="QA">Qatar</option>
                                <option value="SD">Sudan</option>
                                <option value="SY">Syria</option>
                                <option value="TN">Tunisia</option>
                            </select>
                            <div class="wizard-form-error"></div>
                        </div>
                        <div class="form-group">
                            <input asp-for="government" type="text" class="form-control wizard-required" />
                            <label asp-for="government" class="wizard-form-text-label">Government <span class="star">*</span></label>
                            <span asp-validation-for="government" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <input asp-for="field_of_work"  type="text"  class="form-control wizard-required" />
                            <label asp-for="field_of_work" class="wizard-form-text-label">Field Of Work <span class="star">*</span></label>
                            <span asp-validation-for="field_of_work" class="text-danger"></span>
                        </div>
                        @* <div class="form-group">
